<html>
<head>
    <meta charset="UTF-8"/>
    <style>
        @page { margin: 0; }
        body { font-family: 'DejaVu Sans', sans-serif; background-color: #ffffff; color: #333; margin: 0; padding: 0; }
        h1, h2, h3 { font-family: 'DejaVu Serif', serif; color: #2c3e50; }
        p { font-family: 'DejaVu Sans', sans-serif; font-size: 14px; line-height: 1.6; }

        /* Kapak Sayfası */
        .cover { height: 100%; background: linear-gradient(135deg, #3498db, #1a5276); color: white; padding: 0; margin: 0; position: relative; }
        .cover-overlay { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.3); }
        .cover-content { position: relative; z-index: 2; padding: 70px 50px; text-align: center; display: flex; flex-direction: column; justify-content: center; height: 100%; box-sizing: border-box; }
        .magazine-title { font-size: 48px; font-weight: bold; margin: 0 0 20px 0; color: white; text-transform: uppercase; letter-spacing: 3px; text-shadow: 2px 2px 4px rgba(0,0,0,0.5); }
        .magazine-subtitle { font-size: 24px; margin: 0 0 40px 0; color: rgba(255,255,255,0.9); font-weight: normal; }
        .issue-info { font-size: 18px; margin-top: 50px; color: rgba(255,255,255,0.8); }

        /* İçindekiler Sayfası */
        .toc-container { background-color: #ffffff; padding: 50px; }
        .toc-header { border-bottom: 2px solid #2c3e50; padding-bottom: 20px; margin-bottom: 30px; }
        .toc-title { font-size: 32px; font-weight: bold; color: #2c3e50; letter-spacing: 1px; margin: 0; }
        .toc-list { list-style-type: none; padding-left: 0; margin-left: 0; }
        .toc-item { font-size: 16px; margin-bottom: 15px; padding-bottom: 15px; border-bottom: 1px solid #eee; display: flex; justify-content: space-between; }
        .toc-page { font-weight: bold; color: #3498db; }

        /* Makale Sayfası */
        .article { padding: 20px; }
        .article-header { margin-bottom: 30px; }
        .article-title { font-size: 28px; color: #2c3e50; margin-bottom: 15px; border-bottom: 2px solid #3498db; padding-bottom: 10px; }
        .article-summary { font-size: 16px; font-style: italic; color: #555; margin-bottom: 25px; padding: 15px; background-color: #f7f9fa; border-left: 4px solid #3498db; }
        .article-body { column-count: 2; column-gap: 30px; text-align: justify; }
        .article-body p { margin-bottom: 15px; }
        .article-body p:first-letter { font-size: 28px; font-weight: bold; color: #3498db; float: left; line-height: 1; margin-right: 6px; }

        /* Sayfa Numarası */
        .page-number { position: running(pageNumber); font-size: 12px; color: #777; text-align: center; }
        @page { @bottom-center { content: element(pageNumber); } }

        /* Sayfa Kırılmaları */
        .page-break { page-break-before: always; }

    </style>
</head>
<body>
<!-- Kapak Sayfası -->
<div class="cover">
    <h1 class="magazine-title">MAGAZİN EDİSYONU</h1>
    <p class="issue-info">$dateTool.format("yyyy-MM-dd")</p>
</div>

<div class="page-break"></div>

<!-- İçindekiler Sayfası -->
<div class="toc-container">
    <div class="toc-header">
        <h2 class="toc-title">İÇİNDEKİLER</h2>
    </div>
    <ul class="toc-list">
        #foreach($news in $newsList)
            <li class="toc-item">
                <span>$news.title</span>
            </li>
        #end
    </ul>
</div>

<div class="page-break"></div>

<!-- Haberler Sayfası -->
    #foreach($news in $newsList)
    <div class="article">
        <div class="article-header">
            <h2 class="article-title">$news.title</h2>
            <div class="article-summary">$news.summary</div>
        </div>
        <div class="article-body">
            $news.body
        </div>
    </div>
    #end
</body>
</html>
